<Window x:Class="TXM.Win.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:TXM.Core.ViewModels;assembly=TXM.Core"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="400" Width="500" ResizeMode="NoResize">
    <Window.DataContext>
        <vm:SettingsViewModel />
    </Window.DataContext>
    <Grid>
           <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                  <Grid.ColumnDefinitions>
                   <ColumnDefinition Width="230" />
                   <ColumnDefinition Width="5" />
                   <ColumnDefinition Width="120" />
                   <ColumnDefinition Width="5" />
                   <ColumnDefinition Width="120" />
                   <ColumnDefinition Width="5" />
               </Grid.ColumnDefinitions>
               <Grid.RowDefinitions>
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="15" />
                   <RowDefinition Height="10" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="10" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="5" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="10" />
                   <RowDefinition Height="25" />
                   <RowDefinition Height="10" />
                   <RowDefinition Height="25" />
               </Grid.RowDefinitions>
               <Label Grid.Row="1" Grid.Column="0" Content="{Binding Text.ChooseLanguage}"
                      ToolTip="{Binding Text.ChooseLanguageInfo}" Cursor="Help" />
               <ComboBox Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" ItemsSource="{Binding Languages}"
                         SelectedValue="{Binding Language}"/>
               <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">
               <Hyperlink Command="{Binding CheckLanguagesCommand}"><Run Text="{Binding CheckLanguageText}" /></Hyperlink>
               </TextBlock>
               
               <Label Grid.Row="4" Grid.Column="0" Content="{Binding Text.TimerSettingsPermanent}" />

               <Label Grid.Row="6" Grid.Column="0" Content="{Binding Text.ChooseTextColor}"
                      ToolTip="{Binding Text.ChooseTextColorInfo}" Cursor="Help" />
               <ComboBox Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="3" ItemsSource="{Binding TextColors}"
                         SelectedValue="{Binding TextColor}"/>

               <Label Grid.Row="8" Grid.Column="0" Content="{Binding Text.TextSize}"
                      ToolTip="{Binding Text.TextSizeInfo}" Cursor="Help" />
               <TextBox Grid.Row="8" Grid.Column="2" Text="{Binding TextSize}" VerticalAlignment="Center"/>

               <Label Grid.Row="10" Grid.Column="0" Content="{Binding Text.BackgroundImage}"
                      ToolTip="{Binding Text.BackgroundImageInfo}" Cursor="Help" />
               <Label Grid.Row="10" Grid.Column="2" Content="{Binding ImageName}" VerticalAlignment="Center"/>
               <Button Grid.Row="10" Grid.Column="4" Content="{Binding Text.Select}" Command="{Binding SelectImageFileCommand}"/>
               
               <Label Grid.Row="12" Grid.Column="0" Content="{Binding Text.TimerVisibility}"
                      ToolTip="{Binding Text.TimerVisibilityInfo}" Cursor="Help" />
               <CheckBox Grid.Row="12" Grid.Column="2" VerticalAlignment="Center" IsChecked="{Binding IsTimerVisible}"></CheckBox>
               
               
               <Label Grid.Row="14" Grid.Column="0" Content="{Binding Text.TimerSettingsTemporary}" />
               
               <Label Grid.Row="18" Grid.Column="0" Content="{Binding Text.TimerMinutes}"
                      ToolTip="{Binding Text.TimerMinutesInfo}" Cursor="Help" />
               <TextBox Grid.Row="18" Grid.Column="2" Text="{Binding Time}" VerticalAlignment="Center" />
               <Label Grid.Row="18" Grid.Column="4" Content="{Binding Text.Minutes}" />
               
               <Label Grid.Row="18" Grid.Column="0" Content="{Binding Text.StartTime}"
                      ToolTip="{Binding Text.StartTimeInfo}" Cursor="Help" />
               <TextBox Grid.Row="18" Grid.Column="2" Text="{Binding StartTime}" VerticalAlignment="Center"/>
               <Label Grid.Row="18" Grid.Column="4" Content="{Binding Text.TimeFormat}" />

               <Label Grid.Row="20" Grid.Column="0" Content="{Binding Text.RandomTime}"
                      ToolTip="{Binding Text.RandomTimeInfo}" Cursor="Help" />
               <CheckBox Grid.Row="20" Grid.Column="2" VerticalAlignment="Center" IsChecked="{Binding IsTimerRandom}"></CheckBox>
               
               <Label Grid.Row="22" Grid.Column="0" Content="{Binding Text.RandomMinutes}"
                      ToolTip="{Binding Text.RandomMinutesInfo}" Cursor="Help" />
               <TextBox Grid.Row="22" Grid.Column="2" Text="{Binding RandomMinutes}" IsEnabled="{Binding IsTimerRandom}" VerticalAlignment="Center"/>
               <Label Grid.Row="22" Grid.Column="4" Content="{Binding Text.Minutes}" />
               
               <Button Content="{Binding Text.Save}" Grid.Column="2" Grid.Row="24" Click="Ok_Click" IsDefault="True" />
               <Button Content="{Binding Text.Cancel}" Grid.Column="4" Grid.Row="24" Click="Cancel_Click" IsCancel="True" />
        </ScrollViewer>  

    </Grid>
</Window>